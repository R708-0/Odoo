<odoo>
    <!-- heredar vista tree -->
    <record id = "lubricantes_inventario_tree_view" model = "ir.ui.view">
        <field name = "name">lubricantes.inventario.tree.view</field>
        <field name = "model">product.template</field>
        <field name = "inherit_id" ref = "product.product_template_tree_view"></field>
        <field name = "arch" type = "xml">
            <!-- modificar campos -->
            <xpath expr = "//field[@name='default_code']" position = "attributes">
                <attribute name = "string">Nombre Comercial</attribute>
            </xpath>
            <!-- <xpath expr = "//field[@name='default_code']" position = "after">
                <field name = "fecha_vencimiento"/>
            </xpath> -->
            <xpath expr = "//field[@name='qty_available']" position = "attributes">
                <attribute name = "string">Cantidad</attribute>
            </xpath>
            <xpath expr="//field[@name='priority']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='product_tag_ids']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='virtual_available']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='uom_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        
        </field>
    </record>
    <!-- heredar vista kanban -->
    <record id="lubricantes_inventario_kanban_view" model="ir.ui.view">
        <field name="name">lubricantes.inventario.kanban.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_kanban_card oe_kanban_global_click']" position="inside">
                <div>Info inventario</div>
            </xpath>
        </field>
    </record>

    <!-- heredar vista form  -->
    <record id="lubricantes_inventario_only_form_view" model="ir.ui.view">
        <field name="name">lubricantes.iventario.only.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_only_form_view"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="replace">
                <sheet >
                    <div class="row">
                        <div class="col-6">
                            <group>
                                <field name="name"/>
                                <field name="default_code"/>
                                <field name="list_price"/>
                            </group>
                        </div>

                        <div class="col-6">
                            <group>
                                <field name="x_fecha_vencimiento"/>
                                <field name="qty_available"/>
                            </group>
                        </div>
                    </div>
                </sheet>
            </xpath>
    </record>


    <!-- modificar vista del pos -->
    <record id ="lubricantes_inventario_form_view" model="ir.ui.view">
        <field name="name">lubricantes.inventario.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_orderpoints']" position="replace"/>
        </field>
    </record>
  
    <!-- crear evento de las vistas -->
    <record id="lubricantes_inventario_action_view" model="ir.actions.act_window">
        <field name="name">Lubricantes Carlitos</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    <!-- crear menu  -->
    <menuitem id="menu_lubricantes_inventario"  parent="" action="Lubricantes.lubricantes_inventario_action_view" sequence="1"/>
</odoo>