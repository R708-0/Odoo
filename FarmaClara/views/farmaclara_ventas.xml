<odoo>
    <!-- Vista tree heredada de point of sale -->
    <record id="farmaclara_ventas_tree_view" model="ir.ui.view">
        <field name="name">farmaclara.ventas.tree.view</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <!-- eliminar campos innecesarios -->
            <field name="session_id" position="replace"/>
            <field name="config_id" position="replace"/>
            <field name="partner_id" position="replace"/>
            

            <!-- modificar atributos -->
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string"> Referencia </attribute>
            </xpath>
        </field>
    </record>
    
    <record id="farmaclara_ventas_hr_tree_view" model="ir.ui.view">
        <field name="name">farmaclara.ventas.tree.view</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="pos_hr.view_pos_order_tree_inherit"/>
        <field name="arch" type="xml">
            <!-- eliminar campos innecesarios -->
            <field name="employee_id" position="replace"/>
        </field>
    </record>

    <record id="farmaclara_ventas_action_view" model="ir.actions.act_window">
        <field name="name">Ventas</field>
        <field name="res_model">pos.order</field>
        <field name="view_mode">tree</field>
        <field name="groups_id" eval="[(4, ref('group_farmaclara_user'))]"/>
       
    </record>

    <!-- menu -->
    <menuitem id="menu_farmaclara_ventas" action="farmaclara_ventas_action_view" parent="FarmaClara.menu_farmaclara_session" 
    groups="FarmaClara.group_farmaclara_user,base.group_system" sequence="2"/>
</odoo>