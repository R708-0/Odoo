<odoo>
    <!-- modificar vista tree -->
    <record id="farmaclara_compras_tree_view" model="ir.ui.view">
        <field name="name">farmaclara.compras.tree.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <field name="priority" position="replace"/>
            <field name="activity_ids" position="replace"/>
            <field name="origin" position="replace"/>
            <xpath expr="//field[@name='invoice_status']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='date_planned']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
    <!-- modificar vista form -->
    <record id="farmaclara_compras_form_view" model="ir.ui.view">
        <field name="name">farmaclara.compras.form.view</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <!-- eliminar elementos del header -->
            <xpath expr="//button[@name='action_rfq_send']" position="replace"/>
            <xpath expr="//button[@name='print_quotation']" position="replace"/>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@id='draft_confirm']" position="attributes">
                <attribute name="class">btn-primary</attribute>
                <attribute name="string">Confirmar Compra</attribute>
            </xpath>
         
            

            <!-- eliminar campos innecesarios -->
            <xpath expr="//field[@name='partner_ref']" position="replace"/>
            <xpath expr="//field[@name='currency_id']" position="replace"/>
            <xpath expr="//div[@name='date_planned_div']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@name='reminder']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <!-- modificar strings -->
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="string">Fecha de Compra</attribute>
            </xpath>

            <!-- modificar pestaÃ±as de producto -->
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='taxes_id']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='price_total']" position="attributes">
                <attribute name="string">Subtotal</attribute>
            </xpath>
                <!-- seccion de totales -->
            <xpath expr="//group[@class='oe_subtotal_footer']" position="replace">
                <group class="oe_subtotal_footer">
                    <field name="amount_total" readonly="1"/>
                </group>
            </xpath>

            <!-- quitar botones de la parte inferior -->
            <xpath expr="//div[@class='oe_chatter']" position="replace"/>
            
            <xpath expr="//field[@name='notes']" position="attributes">
                <attribute name="placeholder">Puede agregar una nota a la compra</attribute>
            </xpath>
            
        </field>
    </record>

    <record id="farmaclara_compras_action_view" model="ir.actions.act_window">
        <field name="name">Compras</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">tree,form,pivot,graph,calendar</field>
        <field name="view_id" ref="FarmaClara.farmaclara_compras_tree_view"/>
        
    </record>
    <menuitem id="menu_farmaclara_compras" parent="FarmaClara.menu_farmaclara_ventas" name ="Compras" action="FarmaClara.farmaclara_compras_action_view" sequence="11"/>
</odoo>